#include <Adafruit_NeoPixel.h>

#define PIN 6
#define NUMPIXELS  8

Adafruit_NeoPixel pixels = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

void setup() {
  pixels.begin(); // This initializes the NeoPixel library.
}

void loop() {
      pixels.setPixelColor(0, pixels.Color(0, ); // Moderately bright green color.
      pixels.setPixelColor(1, pixels.Color(random(0, 255),random(0,255),random(0, 255))); // Moderately bright green color.
      pixels.show(); // This sends the updated pixel color to the hardware.
      delay(100);
}
